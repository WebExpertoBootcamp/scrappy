<div class="mx-auto md:w-2/3 w-full">
  <h2 class="font-bold text-4xl"><%= t "devise.invitations.edit.header" %></h2>

  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>

    <% if f.object.class.require_password_on_accepting %>
      <div class="my-5">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t("devise.invitations.edit.submit_button"), class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>
